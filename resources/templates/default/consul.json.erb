{
  "domain" : "<%= @cdomain %>",
  "data_dir": "<%= @datadir %>",
  "log_level": "<%= @log_level %>",
  "node_name": "<%= @hostname %>",
  "server": <%= @is_server %>,
  "bind_addr" : "<%= @ipaddress %>",
  "client_addr" : "0.0.0.0",
  "ports" : {
    "dns" : 53
  },
  <% if @bootstrap %>
  "bootstrap" : <%= @bootstrap %>,
  <% else %>
  <% if @server_length == 1 %>
  "bootstrap_expect" : 1,
  <% end %>
  "start_join" : <%= @server_list %>,
  <% end %>
  "recursors" : <%= @dns_local_ip %>,
  "leave_on_terminate": true,
  "enable_script_checks": true
}
